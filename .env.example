# GLIT Platform - Environment Variables Template
# Copy this file to .env and fill in your values

# Application
VITE_APP_NAME=GLIT Platform
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# API Configuration
VITE_API_URL=http://localhost:3001/api
VITE_API_TIMEOUT=30000

# Database (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=glit_platform
DATABASE_USER=glit_user
DATABASE_PASSWORD=your_secure_password_here

# Authentication
VITE_JWT_SECRET=your_jwt_secret_here_change_in_production
VITE_JWT_EXPIRATION=7d

# Feature Flags
VITE_ENABLE_GAMIFICATION=true
VITE_ENABLE_SOCIAL_FEATURES=true
VITE_ENABLE_ANALYTICS=true

# External Services
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# Development
VITE_ENABLE_DEBUG=true
VITE_MOCK_API=false
