# GLIT Platform - Environment Variables
# Frontend Development Configuration

# Application
VITE_APP_NAME=GLIT Platform
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# API Configuration - Backend running on port 3001
# Frontend (Vite) debe correr en otro puerto (ej: 5173)
VITE_API_URL=http://localhost:3006/api
VITE_API_TIMEOUT=30000

# Feature Flags
VITE_ENABLE_GAMIFICATION=true
VITE_ENABLE_SOCIAL_FEATURES=true
VITE_ENABLE_ANALYTICS=false

# Development Settings
VITE_DEBUG_API=true
# Backend is now running - using real API data
VITE_USE_MOCK_DATA=false

# AI Features
VITE_ENABLE_AI=true

# WebSocket
VITE_ENABLE_WEBSOCKET=false
VITE_WS_URL=ws://localhost:3006
